    private class ChatMessage
    {
        public string Role { get; set; } = ""; // "user" or "agent"
        public string? Content { get; set; }
        public string? SurfaceId { get; set; }
        public DateTime Timestamp { get; set; } = DateTime.Now;
    }

    private List<ChatMessage> _messages = new();
    private string _currentInput = "";
    private bool _isLoading = false;
    private string? _lastAction;
    private ElementReference _messagesEndRef;
    private int _surfaceCounter = 0;

    protected override void OnInitialized()
    {
        // Subscribe to user actions (button clicks, etc.)
        EventDispatcher.UserActionDispatched += OnUserAction;
        
        // Add welcome message
        _messages.Add(new ChatMessage
        {
            Role = "agent",
            Content = "ğŸ‘‹ ä½ å¥½ï¼æˆ‘æ˜¯ A2UI Agentã€‚æˆ‘å¯ä»¥æ ¹æ®ä½ çš„éœ€æ±‚åŠ¨æ€ç”Ÿæˆç•Œé¢ã€‚è¯•è¯•ç‚¹å‡»ä¸‹é¢çš„å¿«æ·æŒ‰é’®ï¼Œæˆ–è€…è¾“å…¥ä½ çš„é—®é¢˜ï¼"
        });
    }

    private async void OnUserAction(object? sender, UserActionEventArgs e)
    {
        _lastAction = $"{e.Action.Name} (æ¥è‡ª {e.Action.SourceComponentId})";
        
        Console.WriteLine($"[Demo] OnUserAction: {e.Action.Name}");
        
        // Handle UI-only actions locally (don't send to Agent)
        if (HandleLocalAction(e.Action))
        {
            Console.WriteLine($"[Demo] Action {e.Action.Name} handled locally");
            StateHasChanged();
            return;
        }
        
        // Send action name directly to agent for keyword matching
        var actionQuery = e.Action.Name;
        if (e.Action.Context != null && e.Action.Context.Count > 0)
        {
            var contextStr = string.Join(", ", e.Action.Context.Select(kv => $"{kv.Key}={kv.Value}"));
            actionQuery += $" (ä¸Šä¸‹æ–‡: {contextStr})";
        }
        
        await SendQuery(actionQuery);
        StateHasChanged();
    }

    /// <summary>
    /// Handles actions that only affect UI state (like opening/closing modals)
    /// Returns true if the action was handled locally
    /// </summary>
    private bool HandleLocalAction(UserActionMessage action)
    {
        switch (action.Name)
        {
            case "open_modal":
                // Update the data model to open the modal
                var openUpdate = EventDispatcher.CreateDataUpdate(
                    action.SurfaceId,
                    action.SourceComponentId,
                    "ui/modalOpen",
                    true
                );
                EventDispatcher.DispatchDataUpdate(openUpdate);
                return true;

            case "close_modal":
            case "confirm_action":
            case "cancel_action":
                // Close the modal
                var closeUpdate = EventDispatcher.CreateDataUpdate(
                    action.SurfaceId,
                    action.SourceComponentId,
                    "ui/modalOpen",
                    false
                );
                EventDispatcher.DispatchDataUpdate(closeUpdate);
                return true;

            default:
                return false;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !_isLoading && !string.IsNullOrWhiteSpace(_currentInput))
        {
            await SendCurrentQuery();
        }
    }

    private async Task SendCurrentQuery()
    {
        if (string.IsNullOrWhiteSpace(_currentInput) || _isLoading)
            return;

        await SendQuery(_currentInput);
        _currentInput = "";
    }

    private async Task SendQuery(string query)
    {
        if (_isLoading) return;

        _isLoading = true;
        _lastAction = null;

        Console.WriteLine($"[Demo] SendQuery called: {query}");

        // Add user message
        _messages.Add(new ChatMessage
        {
            Role = "user",
            Content = query
        });
        
        StateHasChanged();

        try
        {
            // Generate unique surface ID for this response
            _surfaceCounter++;
            var surfaceId = $"surface-{_surfaceCounter}";

            Console.WriteLine($"[Demo] Generated surfaceId: {surfaceId}");

            // Send to Agent and get A2UI JSON response
            var messages = await A2AClient.SendQueryAsync(query, surfaceId);

            Console.WriteLine($"[Demo] Received {messages?.Count ?? 0} messages from Agent");

            if (messages != null && messages.Count > 0)
            {
                // Add agent response with UI
                _messages.Add(new ChatMessage
                {
                    Role = "agent",
                    SurfaceId = surfaceId
                });
                
                Console.WriteLine($"[Demo] Added agent message with SurfaceId: {surfaceId}");
            }
            else
            {
                Console.WriteLine("[Demo] No messages received, showing error");
                _messages.Add(new ChatMessage
                {
                    Role = "agent",
                    Content = "æŠ±æ­‰ï¼Œæˆ‘æ— æ³•å¤„ç†è¿™ä¸ªè¯·æ±‚ã€‚"
                });
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Demo] Exception: {ex.Message}");
            Console.WriteLine($"[Demo] StackTrace: {ex.StackTrace}");
            _messages.Add(new ChatMessage
            {
                Role = "agent",
                Content = $"âŒ é”™è¯¯: {ex.Message}"
            });
        }
        finally
        {
            _isLoading = false;
            Console.WriteLine("[Demo] SendQuery completed, calling StateHasChanged");
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        EventDispatcher.UserActionDispatched -= OnUserAction;
    }
}

